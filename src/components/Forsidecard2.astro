---
const {
  image = "",
  imagealt = "",
  titel = "",
  tekst = "",
  slot = "",
} = Astro.props;
import Button from "./Button.astro";
import Link1 from "./Link1.astro";
---

<div class="w-full h-auto overflow-hidden p-4">
  <div>
    <img src={image} alt={imagealt} class="place-self-center w-1/3" />
  </div>
  <div>
    <h3 class="place-self-center text-[var(--color-primary)]">{titel}</h3>
    <p class=" px-8 place-self-center text-[var(--color-primary)]">{tekst}</p>
    <div class="p-4 grid place-self-center mt-8">
      <Link1 href="/biletter" variant="primary" size="small"><slot />Køb billet eller årskort</Link1>
    </div>
  </div>
</div>
