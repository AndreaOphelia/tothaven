---
import Link1 from "./Link1.astro";
---

<div x-data="{ showmenu: false }">
  <header>
    <div class="text-center p-2">
      <p class="max-w-full" style="color: var(--color-primary);">Åbningstider i dag - 8.00-16.00</p>
    </div>

    <!-- burgermenu -->
    <div
      class="flex justify-between items-center p-2 md:hidden"
      style="background-color: var(--color-primary); color: var(--color-primary-content);"
    >
      <a href="/"><h3>TOTHAVEN</h3></a>
      <button x-on:click="showmenu = !showmenu" aria-label="Toggle menu">
        <svg
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- burgermenu -->
    <nav
      x-show="showmenu"
      x-transition
      x-on:click.outside="showmenu = false"
      class="flex flex-col gap-2 p-4 md:hidden text-center"
      style="background-color: var(--color-primary); color: var(--color-primary-content);"
    >
      <a href="/">TOTHAVEN</a>
      <a class="flex justify-center items-center gap-1" href="#">
        Udforsk gården
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m19.5 8.25-7.5 7.5-7.5-7.5"></path>
        </svg>
      </a>
      <a href="/gordmejeriet">Gårdmejeriet</a>
      <a href="#">Gårdens produkter</a>
      <a href="/omos">Om os</a>
      <Link1 href="/biletter" variant="primary" size="xsmall">Køb billet</Link1>
    </nav>

    <!-- normal menu -->
<!-- Include Alpine.js -->
<script src="//unpkg.com/alpinejs" defer></script>

<!-- Navbar -->
<nav
  class="hidden md:flex text-[var(--color-primary-content)] p-2 justify-evenly items-center relative"
  style="background-color: var(--color-primary);"
  x-data="{ open: false }"
>
  <a href="/"><h3>TOTHAVEN</h3></a>

  <!-- Dropdown Trigger -->
  <div class="relative">
    <button @click="open = !open" class="flex items-center gap-1 focus:outline-none">
      Udforsk gården
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
        stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="m19.5 8.25-7.5 7.5-7.5-7.5" />
      </svg>
    </button>

    <!-- Dropdown -->
    <div 
      x-show="open"
      @click.away="open = false"
      x-transition
      class="absolute left-0 top-full w-screen bg-white text-black shadow-lg border mt-2 flex z-50"
    >
      <!-- Links -->
      <div class="w-1/2 p-6 grid grid-cols-1 gap-4">
        <a href="#" class="hover:text-green-700">Dyr & Stald</a>
        <a href="#" class="hover:text-green-700">Køkkenhave</a>
        <a href="#" class="hover:text-green-700">Aktiviteter</a>
        <a href="#" class="hover:text-green-700">Butik & Café</a>
      </div>

      <!-- Billede -->
      <div class="w-1/2">
        <img 
          src="" 
          alt="Gårdbillede" 
          class="w-full h-full object-cover" 
        />
      </div>
    </div>
  </div>

  <a href="/gordmejeriet">Gårdmejeriet</a>
  <a href="#">Gårdens produkter</a>
  <a href="/omos">Om os</a>
  <Link1 href="/biletter" variant="primary" size="small">Køb billet</Link1>
</nav>

  </header>
</div>
