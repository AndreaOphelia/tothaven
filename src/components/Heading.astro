---
// Henter parametrene fra Astro.props
const { htmlheading = "h2", size = "", stylingclasses = "" } = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  xxlarge: "text-7xl",
  xlarge: "text-5xl",
  large: "text-4xl",
  medium: "text-3xl",
  small: "text-base",
  xsmall: "text-sm",
  xxsmall: "text-xs",
};
---

<Htmlheading class:list={[sizeClasses[size], stylingclasses]}
  ><slot /></Htmlheading
>
