---
const { titel = "", stjerner = "", anmeldelseid = "" } = Astro.props;
---

<article
  class="mb-6 p-4 w-auto"
  style="
    background-color: var(--color-base-200);
    color: var(--color-primary);
    border-radius: var(--radius-box);
    opacity: 90%;
    
   
  "
>
  <p class="antalstjerner mb-2" id={anmeldelseid}></p>
  <h4 class="font-bold">{titel}</h4>
  <p><slot /></p>
</article>

<script define:vars={{ stjerner, anmeldelseid }}>
  {
    for (let step = 0; step < stjerner; step++) {
      document.getElementById(anmeldelseid).innerHTML += `
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 inline text-[var(--color-accent)]">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
        </svg>`;
    }

    for (let step = 0; step < 6 - stjerner; step++) {
      document.getElementById(anmeldelseid).innerHTML += `
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 inline text-gray-300">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
        </svg>`;
    }
  }
</script>
